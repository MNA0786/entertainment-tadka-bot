{
    "name": "entertainment-tadka-bot",
    "description": "Multi Channel Telegram Movie Bot with Beautiful UI",
    "type": "project",
    "version": "3.0.0",
    "license": "MIT",
    "authors": [
        {
            "name": "Entertainment Tadka",
            "email": "entertainment@tadka.com"
        }
    ],
    "require": {
        "php": ">=8.1.0",
        "ext-curl": "*",
        "ext-json": "*",
        "ext-mbstring": "*",
        "ext-zip": "*"
    },
    "require-dev": {
        "ext-opcache": "*"
    },
    "autoload": {
        "psr-4": {
            "App\\": "src/"
        },
        "files": ["index.php"]
    },
    "scripts": {
        "post-install-cmd": [
            "echo 'ðŸ“¦ Installing Entertainment Tadka Bot...'",
            "chmod 666 *.csv *.json *.log 2>/dev/null || true",
            "mkdir -p backups logs",
            "chmod 777 backups logs",
            "echo 'movie_name,message_id,date,channel_id,channel_name,channel_emoji,added_timestamp' > movies.csv",
            "echo '{\"users\": {}, \"total_requests\": 0, \"message_logs\": [], \"created\": \"'$(date -Iseconds)'\"}' > users.json",
            "echo '{\"total_movies\": 0, \"total_users\": 0, \"total_searches\": 0, \"channels_stats\": {}, \"last_updated\": \"'$(date -Iseconds)'\", \"created\": \"'$(date -Iseconds)'\"}' > bot_stats.json",
            "echo '{}' > channels_tracker.json",
            "touch error.log",
            "chmod 666 error.log",
            "echo 'âœ… Installation completed!'"
        ],
        "post-update-cmd": [
            "chmod 666 *.csv *.json *.log 2>/dev/null || true",
            "chmod 777 backups logs"
        ],
        "setup": [
            "@post-install-cmd"
        ],
        "backup": [
            "mkdir -p backups/$(date +%Y-%m-%d)",
            "cp *.csv *.json backups/$(date +%Y-%m-%d)/"
        ]
    },
    "config": {
        "optimize-autoloader": true,
        "preferred-install": "dist",
        "sort-packages": true
    },
    "minimum-stability": "stable",
    "prefer-stable": true
}